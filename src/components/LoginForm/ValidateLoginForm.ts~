import * as Yup from 'yup';

export const ValidateLoginForm = Yup.object().shape({
    email: Yup.string().email('Невірний формат email').required('message_required'),
    password: Yup.string()
        .trim()
        .min(8, 'message_minLength_8')
        .max(100, 'message_maxLength_100')
        .required('message_required')
});
